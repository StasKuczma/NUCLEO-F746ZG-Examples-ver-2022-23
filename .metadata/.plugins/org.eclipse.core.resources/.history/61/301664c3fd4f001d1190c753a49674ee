/**
  ******************************************************************************
  * @file		: led.h
  * @author  	: AW		Adrian.Wojcik@put.poznan.pl
  * @version 	: 1.3.0
  * @date    	: Oct 19, 2022
  * @brief   	: Single-color LED components driver
  *
  ******************************************************************************
  */
#ifndef INC_LED_H_
#define INC_LED_H_

/* Public includes -----------------------------------------------------------*/
#ifdef USE_HAL_DRIVER
#include "stm32f7xx_hal_gpio.h"
#endif

/* Public typedef ------------------------------------------------------------*/

/**
  * @brief GPIO (On/Off) LED handle structure definition
  */
#ifdef USE_HAL_DRIVER
typedef GPIO_TypeDef LED_GPIO_Port_TypeDef;
typedef uint16_t LED_GPIO_Pin_TypeDef;
#endif
typedef enum { LED_ON_LOW, LED_ON_HIGH } LED_GPIO_ActiveState_TypeDef;
typedef enum { LED_OFF, LED_ON } LED_GPIO_State_TypeDef;

typedef struct {
	LED_GPIO_Port_TypeDef Port;
	LED_Pin_TypeDef Pin;
	LED_ActiveState_TypeDef ActiveState;
} LED_GPIO_Handle_TypeDef;

/**
  * @brief PWM LED handle structure definition
  */

/* Public define -------------------------------------------------------------*/

/* Public macro --------------------------------------------------------------*/

/* Public variables ----------------------------------------------------------*/

/* Public function prototypes ------------------------------------------------*/

/**
  * @brief Turns LED on
  * @param[in] hled		: LED handler
  * @retval None
  */
void LED_GPIO_On(const LED_Handle_TypeDef* hled);

/**
  * @brief Turns LED off
  * @param[in] hled		: LED handler
  * @retval None
  */
void LED_GPIO_Off(const LED_Handle_TypeDef* hled);

/**
  * @brief Toggles LED state
  * @param[in] hled		: LED handler
  * @retval None
  */
void LED_GPIO_Toggle(const LED_Handle_TypeDef* hled);

/**
  * @brief Writes given LED state
  * @param[in] hled		: LED handler
  * @param[in] state 	: LED state (LED_OFF or LED_ON)
  * @retval None
  */
void LED_GPIO_Write(const LED_Handle_TypeDef* hled, LED_State_TypeDef state);

/**
  * @brief Writes given LED state
  * @param[in] hled		: LED handler
  * @retval	LED state (LED_OFF or LED_ON)
  */
LED_State_TypeDef LED_GPIO_Write(const LED_Handle_TypeDef* hled);

#endif /* INC_LED_H_ */
